---
import {app} from "../../firebase/server";
import {getFirestore} from "firebase-admin/firestore";
import { getAuth } from "firebase-admin/auth";
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import Timestamp from "firebase-admin";

interface Post {
    id: string;
    title: string;
    content: string;
    createAt: typeof Timestamp;
}

const db = getFirestore(app);
const postsRef = db.collection("posts");
const postsSnapshot = await postsRef.get();
const posts = postsSnapshot.docs.map((doc) => ({
    id: doc.id,
    ...doc.data(),
})) as Post[];


const auth = getAuth(app);

/* Check current session */
if (!Astro.cookies.has("__session")) {
    return Astro.redirect("/signin");
}
const sessionCookie = Astro.cookies.get("__session")?.value || "";
const decodedCookie = await auth.verifySessionCookie(sessionCookie);
const user = await auth.getUser(decodedCookie.uid);

if (!user) {
    return Astro.redirect("/signin");
}
---

<DashboardLayout title="dashboard">
    <div class="container">
        <a href="dashboard/posts/add">
            <button class="primary">Add Post</button>
        </a>
        <div class="content">
            {
                posts.length > 0 ?
                        <ul class="list-posts">
                            {
                                posts.map((post) => (
                                        <li>
                                            <a href={`/blog/${post.id}`} target="_blank">{post.title}</a>
                                            <a class="edit" href={`dashboard/posts/edit/${post.id}`}>Edit</a>
                                        </li>
                                ))
                            }
                        </ul> :
                        <></>
            }
        </div>
    </div>
</DashboardLayout>